
<div class="main">
<p id="notice" class="notice"><%= notice %></p>
<div class="container center">
  <% @clients.each do |client| %>
		<!-- <ul class="list"> -->
		<div class="client_row">
		<div class="row">
		<div class="col s6 center_align"><%= image_tag(client.img_url, :class => "client_logo") %></div>
		<div class="col s6 center_align"><span class="client_name"><%= client.name %></span> <br> <span class="subtitle"><%= client.description %></div>

	  <% if !@admin %>
	  <div class="admin_options col s6"><%= link_to 'Show', client %>	| <%= link_to 'Edit', edit_client_path(client) %> | <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></div>
	  <% end %>
	  </div>
	  </div>
	  <% end %>
	  <% if !@admin %>
			<%= link_to 'New Client', new_client_path, :class => "waves-effect waves-light btn" %>
	  <% end %>
</div>
</div>


