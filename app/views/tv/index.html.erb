<p id="notice"><%= notice %></p>

<h1>Listing Tvs</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Title</th>
      <th>Description</th>
      <th>Img url</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tvs.each do |tv| %>
      <tr>
        <td><%= tv.year %></td>
        <td><%= tv.title %></td>
        <td><%= tv.description %></td>
        <td><%= tv.img_url %></td>
        <td><%= tv.favorite %></td>
        <td><%= link_to 'Show', tv %></td>
        <td><%= link_to 'Edit', edit_tv_path(tv) %></td>
        <td><%= link_to 'Destroy', tv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

