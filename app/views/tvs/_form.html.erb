<%= form_for(@tv) do |f| %>
  <div class="modal_box">
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :year %><br>
      <%= f.text_field :year %>
    </div>
    <div class="field">
      <%= f.label :season %><br>
      <%= f.text_field :season %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description,  class: "materialize-textarea" %>
    </div>
    <div class="field">
      <%= f.label :img_url %><br>
      <%= f.text_field :img_url %>
    </div>
    <div class="field center">
      <%= f.label :favorite %><br>
      <input type="checkbox" class="filled-in" id="filled-in-box" checked="checked"/>
      <label for="filled-in-box"><%= f.check_box :favorite %></label>
    </div>
    <div class="actions center">
      <%= f.submit "Save", class: "btn" %>  or  
      <%= link_to "Cancel", projects_url, class: "btn" %></div>
    </div>
  </div>
<% end %>
