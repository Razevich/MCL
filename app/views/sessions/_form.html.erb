<div class="errors">
  <% if flash[:danger] %>
    <i class="material-icons prefix">info</i>
    <%= flash[:danger] %>
  <% end %>
</div>

<div class="modal_box">
<h5>Admin Login</h5>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Login", class: :"waves-effect waves-light btn center" %>
    </div>
  <% end %>
</div>