<div class="errors">
  <% if flash[:alert] %>
    <!-- <i class="material-icons prefix">info</i> -->
    <%= flash[:alert] %>
  <% end %>
</div>

<div class="modal_box">
<h5>Admin Login</h5>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions center">
      <%= f.submit "Login", class: :"btn" %>
    </div>
  <% end %>
</div>