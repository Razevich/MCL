
<div class="main_background">
<p id="notice"><%= notice %></p>
<h1>Films</h1>
  <div class="container project_frame">
    <div class="row valign">
  		<% @films.each do |film| %>
        <div class="col s12 m6 l3 center">
      	<div class="poster_index">
          <%= link_to image_tag(film.img_url, :class => "poster_thumb"), "film_path(:id)" %>
        </div>
      	<div class="info"> 
          <h5><%= film.title %></h5> 
          <h5><%= film.year %></h5> 
        </div>
        
        <div class="admin_box">
          <% if !@admin %>
            <%= link_to 'Show', film %> | <%= link_to 'Edit', edit_film_path(film) %> | 
            <%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>  
      	</div>
      <% end %>
    </div>

    <div class="admin_box">
      <% if @admin %>
        <%= link_to 'New Film', new_film_path, :class => "waves-effect waves-light btn valign" %>
      <% end %>
    </div>

  </div>
</div>