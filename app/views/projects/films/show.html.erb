<div class="film_frame">
<div class="show_poster"><%= link_to image_tag(@film.img_url, :class => "poster")%></div>

<h1> 
  <% if @film.favorite == false %>
  <span class="fa fa-star"></span> 
  <% end %>
  <%= @film.title %> <br>
<span class="year"> <%= @film.year %></span> </h1>
<div class="divider"></div>
<p> <%= @film.description %> </p>


<div class="divider"></div>
<div class="admin_box">
  <% if !@admin %>
    <%= link_to 'Edit', edit_film_path(@film) %> |
    <%= link_to 'Back', films_path %>
  <% end %>
</div>

</div>